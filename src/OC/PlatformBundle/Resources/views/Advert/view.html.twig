
{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  {% if advert.image is not null %}
  <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
  {% endif %}

  <h2>{{ advert.title }}</h2>
  <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ advert.content }}
  </div>

  <p>
    <a href="{{ path('oc_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('oc_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oc_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>
  
  {% if listApplications|length > 0 %}
      <p> Condidatures</p>
    {% for Application in listApplications %}
        <p>{{ Application.author }}:{{ Application.content }}</p>
        <p>{{ Application.date|date('d/m/Y') }}</p>
        <hr>
     {% endfor %} 
   {% endif %} 
  {% if not advert.categories.empty %}
  <p>     Cette annonce est parue dans les catégories suivantes :</p>
    {% for category in advert.categories %}
    {{ category.name }}{% if not loop.last %}<hr>{% endif %}     
   {% endfor %}  
 {% endif %}  
  {% if listAdvertSkills|length > 0 %}
      <p> Cette annonce requiert les compétences suivantes :</p>
    {% for advertSkill in listAdvertSkills %}
        <p>{{ advertSkill.skill.name }}: niveau {{ advertSkill.level }}</p>
        <hr>
     {% endfor %} 
   {% endif %}  
   
     {% if listAdvertCategories|length > 0 %}
      <p> Annonces pour  :</p>
    {% for AdvertCategorie in listAdvertCategories %}
        <p>{{ AdvertCategorie.advert.title }}</p>
        <hr>
     {% endfor %} 
   {% endif %}  
   
{% endblock %}